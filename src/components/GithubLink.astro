---
import IconGitHub from "@/assets/icons/IconGitHub.svg";

export interface Props {
  class?: string;
  url: string;
  size?: "sm" | "lg";
}

const { url, size = "sm", class: className = "" } = Astro.props;
const display = url.split("https://github.com/").at(1);
---

<div class:list={["flex items-center gap-x-2 opacity-80", className]}>
  <IconGitHub
    class:list={[
      "inline-block size-6 min-w-[1.375rem]",
      { "scale-90": size === "sm" },
    ]}
  />
  <a
    href={url}
    class:list={[
      "text-sm decoration-dashed hover:underline",
      { "sm:text-base": size === "lg" },
    ]}>{display}</a
  >
</div>
